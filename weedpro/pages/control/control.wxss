.laser{
  width: 100%;
  height: 300rpx;
  justify-content: center;
}

.btn_laser{
  display: flex;
  justify-content: center; /* 水平居中 */
}

.laser_container{
  display: flex;
  justify-content: center; /* 水平居中 */
}
.text1{
  display: flex;
  justify-content: center; /* 水平居中 */
  margin-top: 20px;
}

.remote {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
  margin-left: 16%;
  margin-right: 16%;
  border-radius: 30px;
  /* border: 1px solid black; */
}

.row {
  display: flex;
  justify-content: space-between;
  width: 70%;
  margin-bottom: 10px;
}

button {
  width: 80rpx;
  height: 120rpx;
  background-color:black;
  color: #fff;
  /* border: none; */
  box-shadow:1px,1px,5px,10px,gray;
  border-radius: 60%; /* 将按钮设置为圆形 */
}

.hover-class-1 {
  top: 3rpx;
  background-color: #e7f5ff;
}

/* login.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}
.modal-title {
  font-size: 18px;
  margin-bottom: 10px;
}
.username, .password {
  width: 80%;
  margin-bottom: 10px;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.btn_login{
  background-color:black; /* 绿色背景 */
  border: none;
  color: white;
  padding: 10px 24px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  border-radius: 20px;
  cursor: pointer;
}

.laser_container, .remote .row {
  margin: 10px;
}
